<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MAD_Assignment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:editTextColor">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_china</item> <!--color of buttons etc -->
        <item name="colorPrimaryVariant">@color/backing_blue</item> <!-- Color backing main -->
        <item name="colorOnPrimary">@color/white</item> <!-- color on top of primary -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/lighter_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button.blue" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>
</resources>