<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/backing_blue"
    tools:context=".ui.Study.AddStudyLocation">

    <TextView
        android:id="@+id/AddStudy"
        android:layout_width="412dp"
        android:layout_height="47dp"
        android:layout_marginTop="88dp"
        android:gravity="center|center_horizontal"
        android:text="Add Study Location"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/StudyPlaceName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/StudyPlaceName"
        android:layout_width="391dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="StudyPlace Name"
        android:inputType="textEmailSubject"
        android:outlineProvider="paddedBounds"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddStudy">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/StudyPlaceNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:singleLine="true"
            android:textColor="#000000" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/StudyPlaceLocation"
        android:layout_width="390dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="396dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:gravity="start"
        android:hint="StudyPlace Location"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StudyPlaceName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/StudyPlaceLocationText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:textColor="#000000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/StudyPlaceDescription"
        android:layout_width="390dp"
        android:layout_height="191dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="188dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:gravity="start"
        android:hint="StudyPlace Description"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/StudyPlaceDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:textColor="#000000" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonsubmitStudy"
        android:layout_width="126dp"
        android:layout_height="48dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@color/blue_china"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/studyaddimage"
        android:layout_width="130dp"
        android:layout_height="99dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintBottom_toTopOf="@+id/AddStudy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/study_book" />

    <Button
        android:id="@+id/UploadImageAddSPbutton"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="92dp"
        android:text="Upload Images"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonsubmitStudy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StudyPlaceDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>